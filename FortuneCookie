import random

lucky_number = random.randint(1, 100)

fortune_number = random.randint(1, 3)
fortune_text = " "

if fortune_number == 1:
  fortune_text = "You will have a great day!"
if fortune_number == 2:
  fortune_text = "You're probably going to have a bad day!"
if fortune_number == 3:
    fortune_text = "Today will be blase"

#the f in front of strings tell Python to look at the values, expressions, or instance inside {} and substitute them with the variables values or results if exists
print(f"{fortune_text}. Your Lucky Number is: {lucky_number}")
